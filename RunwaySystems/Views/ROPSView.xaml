<UserControl x:Class="RunwaySystems.Views.ROPSView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RunwaySystems.Views"
             mc:Ignorable="d" 
             d:DesignHeight="760" d:DesignWidth="1060"
             d:Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"  Padding="10">
            <StackPanel Orientation="Vertical">
                <Label HorizontalAlignment="Center">Конфигурация посадки</Label>
                <RadioButton x:Name="PerfectLanding" Content="Идеальная посадка" GroupName="ROW" Checked="Mode_Checked" Unchecked="Mode_UnChecked" IsChecked="True"></RadioButton>
                <RadioButton x:Name="RWYTooShort" Content="IF WET RWY TOO SHORT" GroupName="ROW" Unchecked="Mode_UnChecked" Checked="Mode_Checked"></RadioButton>
                <RadioButton x:Name="RWYTooShortOverrun" Content="RWY TOO SHORT and OVERRUN CONDITION" GroupName="ROW" Checked="Mode_Checked" Unchecked="Mode_UnChecked"></RadioButton>
                <RadioButton x:Name="MAX" Content="MAX BREAKING, MAX REVERSE" GroupName="ROP" Checked="Mode_Checked" Unchecked="Mode_UnChecked" IsEnabled="False"></RadioButton>
                <RadioButton x:Name="NotMAX" Content="MAX REVERSE THRUST HASN'T BEEN SELECTED" GroupName="ROP" Checked="Mode_Checked" Unchecked="Mode_UnChecked" IsEnabled="False"></RadioButton>
                <Button Margin="0 20 0 0" VerticalAlignment="Top" Content="Запуск" MinHeight="10" Click="Button_Click"></Button>
            </StackPanel>
        </Border>

        <GridSplitter Grid.Column="1" Width="5"/>

        <Grid Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border x:Name="NDBorder" Grid.Row="0" Grid.Column="0" BorderThickness="3" Margin="10 5">
                <StackPanel Orientation="Vertical" VerticalAlignment="Top">
                    <Canvas x:Name="NDCanvas" 
                            Width="300"
                            Height="300">
                        <Canvas.Background>
                            <ImageBrush ImageSource="../Resources/ND_Display/ND_Background.png"/>
                        </Canvas.Background>
                        <Canvas.Children>
                            <Rectangle x:Name="ND_UI" Width="{Binding ElementName=NDCanvas, Path=ActualWidth}"
                                       Height="{Binding ElementName=NDCanvas, Path=ActualHeight}">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="../Resources/ND_Display/ROSE_UI.png"></ImageBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </Canvas.Children>
                    </Canvas>
                    <Slider x:Name="NDBackground_slider" Orientation="Horizontal" Margin="0 10" Maximum="5" SmallChange="0.2" ValueChanged="NDBackground_slider_ValueChanged" Minimum="2" Value="1"/>
                    <UniformGrid Columns="3">
                        <Button Content="ROSE" Click="Mode_Button_Click"></Button>
                        <Button Content="ARC" Margin="5 0" Click="Mode_Button_Click"></Button>
                        <Button Content="PLAN" Click="Mode_Button_Click"></Button>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <Border x:Name="PFDBorder" Grid.Row="0" Grid.Column="2" BorderThickness="3" VerticalAlignment="Top"  Margin="10 5">
                <Canvas x:Name="PFDCanvas" 
                        Width="300"
                        Height="300">
                    <Canvas.Background>
                        <ImageBrush ImageSource="../Resources/PFD_Background.png"/>
                    </Canvas.Background>
                </Canvas>
            </Border> 

            <GridSplitter Grid.Row="1" Grid.ColumnSpan="3" Width="5" HorizontalAlignment="Stretch"/>

            <Canvas  x:Name="DemoCanvas" Background="LightGray"
                        Width="600"
                        Height="300"
                        Grid.Row="2" Grid.ColumnSpan="3">
            </Canvas>
        </Grid> 
    </Grid>
</UserControl>
