<Window x:Class="RunwaySystems.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RunwaySystems"
        xmlns:views="clr-namespace:RunwaySystems.Views"
        xmlns:viewmodels="clr-namespace:RunwaySystems.ViewModels"
        mc:Ignorable="d"
        Title="Runway Systems" Height="768" Width="1024" ResizeMode="CanResize">

    <Window.Resources>
        <!-- Views to ViewModels bindings -->
        <DataTemplate DataType="{x:Type viewmodels:ROPSViewModel}">
            <views:ROPSView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:TheoryViewModel}">
            <views:TheoryView/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="ROPS" Command="{Binding UpdateViewCommand}" CommandParameter="ROPS"/>
            <MenuItem Header="RAAS" Command="{Binding UpdateViewCommand}" CommandParameter="Theory"/>
            <MenuItem Header="Теория"/>
        </Menu>
        
        <ContentControl Grid.Row ="1" Content="{Binding SelectedViewModel}"/>
        
    </Grid>
</Window>
